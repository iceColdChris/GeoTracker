<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.uwt.strugglebus.geotracker.View.TrajectoryChooser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:text="@string/view_trajectory"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:onClick="showDatePickerDialog"
                android:id="@+id/start_date_button"
                android:layout_row="0"
                android:layout_column="0"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/start_date_text"
                android:text="date"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:onClick="showTimePickerDialog"
                android:id="@+id/start_time_button"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="time"
                android:id="@+id/start_time_text"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:onClick="showDatePickerDialog"
                android:id="@+id/end_date_button"
                android:layout_row="2"
                android:layout_column="0"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="date"
                android:id="@+id/end_date_text"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_time"
                android:onClick="showTimePickerDialog"
                android:id="@+id/end_time_button"
                android:layout_row="3"
                android:layout_column="0"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="time"
                android:id="@+id/end_time_text"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_trajectory"
                android:layout_row="4"
                android:layout_column="0"
                android:id="@+id/accept_view_traject"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_row="4"
                android:layout_column="1"
                android:id="@+id/cancel_view_traject"/>

        </GridLayout>



    </LinearLayout>
</ScrollView>